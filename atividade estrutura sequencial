#include <stdlib.h>



int main() {



  // Exercicio 1

  int a, b;

  printf("informe o primeiro numero: ");

  scanf("%d", &a);

  printf("informe o segundo numero numero: ");

  scanf("%d", &b);

  printf("%d + %d = %d\n", a, b, a + b);



  // Exercicio 2

  double a1, b1;

  printf("informe o primeiro numero: ");

  scanf("%lf", &a1);

  printf("informe o segundo numero numero: ");

  scanf("%lf", &b1);

  printf("a media entre %.2lf e %.2lf = %.2lf\n", a1, b1, (a1 + b1) / 2);



  // Exercicio 3

  int a3;

  printf("informe um numero: ");

  scanf("%d", &a3);

  printf("Numero digitado é: %d. Seu antecessor é %d. Seu sucessor é %d\n", a3, a3 - 1, a3 + 1);



  // Exercicio 4

  int a4;

  printf("informe um numero: ");

  scanf("%d", &a4);

  printf("O número %d elevado a 2 é %d\n", a4, a4 * 2);



}
