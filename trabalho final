etapa 1: #include <stdio.h>

int main() {
    float nota1, nota2;

    // Entrada de dados
    printf("Digite a primeira nota: ");
    scanf("%f", &nota1);

    printf("Digite a segunda nota: ");
    scanf("%f", &nota2);

    // Saída de dados
    printf("\nAs notas inseridas foram:\n");
    printf("Nota 1: %.2f\n", nota1);
    printf("Nota 2: %.2f\n", nota2);

    return 0;
}

etapa 2: #include <stdio.h>

int main() {
    float nota;

    printf("Digite a nota: ");
    scanf("%f", &nota);

    // Estrutura de decisão com if-else
    if (nota >= 0 && nota <= 10) {
        printf("Nota válida: %.2f\n", nota);
    } else {
        printf("Erro: a nota deve estar entre 0 e 10.\n");
    }

    return 0;
}

etapa 3:

#include <stdio.h>

#define MAX_NOTAS 50

int main() {
    float notas[MAX_NOTAS];
    int totalNotas = 0;
    char continuar;
    int i;
    
    printf("=== CADASTRO DE NOTAS ===\n\n");
    
    do {
        printf("Digite a nota: ");
        scanf("%f", &notas[totalNotas]);
        totalNotas++;
        
        printf("Deseja cadastrar outra nota? (s/n): ");
        scanf(" %c", &continuar);
        
    } while (continuar == 's' && totalNotas < MAX_NOTAS);
    
    printf("\n=== NOTAS CADASTRADAS ===\n");
    for (i = 0; i < totalNotas; i++) {
        printf("Nota %d: %.2f\n", i + 1, notas[i]);
    }
    
    printf("\nTotal de notas: %d\n", totalNotas);
    
    return 0;
}

etapa 4: #include <stdio.h>


int main() {
    float notas[50];
    int totalNotas = 0;
    char continuar;
    int i;
    
    printf("=== CADASTRO DE NOTAS ===\n\n");
    
    do {
        printf("Digite a nota: ");
        scanf("%f", &notas[totalNotas]);
        totalNotas++;
        
        printf("Deseja cadastrar outra nota? (s/n): ");
        scanf(" %c", &continuar);
        
    } while (continuar == 's' && totalNotas < MAX_NOTAS);
    
    printf("\n=== NOTAS CADASTRADAS ===\n");
    for (i = 0; i < totalNotas; i++) {
        printf("Nota %d: %.2f\n", i + 1, notas[i]);
    }
    
    float soma = 0;
    for (i = 0; i < totalNotas; i++) {
        soma += notas[i];
    }
    float media = soma / totalNotas;
    
    float maior = notas[0];
    float menor = notas[0];
    i = 1;
    while (i < totalNotas) {
        if (notas[i] > maior) {
            maior = notas[i];
        }
        if (notas[i] < menor) {
            menor = notas[i];
        }
        i++;
    }
    
    printf("\n=== ESTATISTICAS ===\n");
    printf("Total de notas: %d\n", totalNotas);
    printf("Media: %.2f\n", media);
    printf("Maior nota: %.2f\n", maior);
    printf("Menor nota: %.2f\n", menor);
    
    return 0;
}

etapa 5: #include <stdio.h>

float calcularMedia(float notas[], int total) {
    float soma = 0;
    int i;
    for (i = 0; i < total; i++) {
        soma += notas[i];
    }
    return soma / total;
}

float maiorNota(float notas[], int total) {
    float maior = notas[0];
    int i;
    for (i = 1; i < total; i++) {
        if (notas[i] > maior) {
            maior = notas[i];
        }
    }
    return maior;
}

float menorNota(float notas[], int total) {
    float menor = notas[0];
    int i;
    for (i = 1; i < total; i++) {
        if (notas[i] < menor) {
            menor = notas[i];
        }
    }
    return menor;
}

void exibirNotas(float notas[], int total) {
    int i;
    printf("\n=== NOTAS CADASTRADAS ===\n");
    for (i = 0; i < total; i++) {
        printf("Nota %d: %.2f\n", i + 1, notas[i]);
    }
}

int main() {
    float notas[50];
    int totalNotas = 0;
    char continuar;
    int i;
    
    printf("=== CADASTRO DE NOTAS ===\n\n");
    
    do {
        printf("Digite a nota: ");
        scanf("%f", &notas[totalNotas]);
        totalNotas++;
        
        printf("Deseja cadastrar outra nota? (s/n): ");
        scanf(" %c", &continuar);
        
    } while (continuar == 's' && totalNotas < 50);
    
    // Menu de opções estatísticas
    int opcao;
    do {
        printf("\n=== MENU DE OPCOES ===\n");
        printf("1. Exibir todas as notas\n");
        printf("2. Calcular media\n");
        printf("3. Exibir maior nota\n");
        printf("4. Exibir menor nota\n");
        printf("5. Exibir todas as estatisticas\n");
        printf("0. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);
        
        switch(opcao) {
            case 1:
                exibirNotas(notas, totalNotas);
                break;
                
            case 2:
                printf("\nMedia: %.2f\n", calcularMedia(notas, totalNotas));
                break;
                
            case 3:
                printf("\nMaior nota: %.2f\n", maiorNota(notas, totalNotas));
                break;
                
            case 4:
                printf("\nMenor nota: %.2f\n", menorNota(notas, totalNotas));
                break;
                
            case 5:
                printf("\n=== ESTATISTICAS COMPLETAS ===\n");
                printf("Total de notas: %d\n", totalNotas);
                printf("Media: %.2f\n", calcularMedia(notas, totalNotas));
                printf("Maior nota: %.2f\n", maiorNota(notas, totalNotas));
                printf("Menor nota: %.2f\n", menorNota(notas, totalNotas));
                break;
                
            case 0:
                printf("\nEncerrando programa...\n");
                break;
                
            default:
                printf("\nOpcao invalida!\n");
        }
        
    } while (opcao != 0);
    
    return 0;
}
